<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardElevation="20dp"
                android:textAlignment="center" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Customer ID   -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_customer_id" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_customer_id"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Company Name  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_company_name" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_company_name"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Contact Name  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_contact_name" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_contact_name"
                            android:gravity="center_vertical"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Contact Title  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_contact_title" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_contact_title"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_address" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_address"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/purple_200"
                            android:focusable="true"
                            android:clickable="true"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- City -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_city" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_city"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_email" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_email"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:focusable="true"
                            android:clickable="true"
                            android:textColor="@color/teal_700"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Postal Code  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_postal_code" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_postalcode"
                            android:gravity="center_vertical"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Country -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_country" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/cell_textview_country"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_phone" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/cell_textview_phone"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="left"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data"
                            android:focusable="true"
                            android:clickable="true"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <!-- Fax -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <View
                            android:layout_weight="0.04"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="@string/label_fax" />
                        <View
                            android:layout_weight="0.02"
                            android:layout_width="0dp"
                            android:layout_height="5dp"/>
                        <TextView
                            android:id="@+id/cell_textview_fax"
                            android:gravity="left"
                            android:layout_weight="0.6"
                            style="@style/Widget.AppCompat.TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:scrollbars="vertical"
                            android:text="@string/label_dummy_data" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />


                </LinearLayout>





            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>